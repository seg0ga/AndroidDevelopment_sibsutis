<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010101"
    android:backgroundTint="#010101"
    tools:context=".location">

    <TextView
        android:id="@+id/CellSignalStrength"
        android:layout_width="388dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_cell_info1" />

    <TextView
        android:id="@+id/cellIdentity"
        android:layout_width="388dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CellIdentity"
        android:layout_width="388dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttn_gsm"
        android:layout_width="131dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="680dp"
        android:backgroundTint="#16c603"
        android:text="GSM"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/bttn_lte"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttn_lte"
        android:layout_width="116dp"
        android:layout_height="68dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="680dp"
        android:backgroundTint="#16c603"
        android:text="LTE"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttn_nr"
        android:layout_width="116dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="680dp"
        android:backgroundTint="#16c603"
        android:text="NR"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/bttn_gsm"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_cell_info1"
        android:layout_width="387dp"
        android:layout_height="260dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CellIdentity" />

    <ListView
        android:id="@+id/list_cell_info2"
        android:layout_width="387dp"
        android:layout_height="260dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CellSignalStrength" />

</androidx.constraintlayout.widget.ConstraintLayout>