<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010101"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bttn_tasks"
        android:layout_width="345dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:backgroundTint="#919191"
        android:text="Задания"
        android:textAlignment="center"
        android:textColor="#0b0b0b"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttn_telephony" />

    <Button
        android:id="@+id/bttn_location"
        android:layout_width="345dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2d2d2f"
        android:text="Location"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttn_mediaplayer" />

    <Button
        android:id="@+id/bttn_сalculator"
        android:layout_width="345dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="264dp"
        android:backgroundTint="#2d2d2f"
        android:text="Calculator"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bttn_sockets"
        android:layout_width="345dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2d2d2f"
        android:text="Sockets"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttn_telephony" />

    <Button
        android:id="@+id/bttn_telephony"
        android:layout_width="345dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2d2d2f"
        android:text="Telephony"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttn_location" />

    <Button
        android:id="@+id/bttn_mediaplayer"
        android:layout_width="345dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2d2d2f"
        android:text="MediaPlayer"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttn_сalculator" />

</androidx.constraintlayout.widget.ConstraintLayout>